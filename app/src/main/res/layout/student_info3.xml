<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/s_name1" android:hint="Enter Student Name" android:maxLines="1"
            style="@style/Widget.AppCompat.AutoCompleteTextView" android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/darker_gray" android:textSize="14sp" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:id="@+id/s_enroll1" android:hint="Enter Student Enroll" android:maxLines="1"
            style="@style/Widget.AppCompat.AutoCompleteTextView" android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/darker_gray" android:textSize="14sp" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/s_name1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/s_address1" android:hint="Enter Student City" android:maxLines="2"
            style="@style/Widget.AppCompat.AutoCompleteTextView" android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/darker_gray" android:textSize="14sp" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:ems="10" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/s_enroll1"/>
    <Button
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/submit" android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.968"
            app:layout_constraintTop_toBottomOf="@+id/s_address1" android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

</android.support.constraint.ConstraintLayout>