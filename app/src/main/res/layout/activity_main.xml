<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/activity_main"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="match_parent">

    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.design.widget.NavigationView
            app:headerLayout="@layout/nav_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nav_view"
            android:background="#f78b08"
            app:itemTextColor="@drawable/nav_itemcolor"
            app:itemIconTint="@drawable/nav_itemcolor"
            app:menu="@menu/menu1"
            android:layout_gravity="start"

            >


    </android.support.design.widget.NavigationView>
<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorAccent1"
            app:title="Toolbar"
            app:titleTextColor="#ffffff"
            app:subtitleTextColor="#ffffff"
            app:navigationIcon="@drawable/ic_menu_black_24dp"
            app:logo="@mipmap/tool"
            app:contentInsetStart="0dp"
            android:id="@+id/tool1"
            android:elevation="10dp"
            app:subtitle="Toolbar task"
            app:contentInsetLeft="0dp"
            app:contentInsetStartWithNavigation="0dp"
    >


    </android.support.v7.widget.Toolbar>


    <Button
            android:text=" Service Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Intent Service Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.224"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tool1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/sharetext" android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/btn1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            android:background="@android:color/background_light" android:hint="Enter Your Message" android:lines="4"
            android:textColor="@android:color/background_dark" android:textSize="18sp" android:textStyle="bold"
            android:textColorHint="@android:color/black" android:padding="5dp"
            android:drawableRight="@drawable/ic_message_black_24dp" android:drawablePadding="5dp" android:ems="10"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.022"/>
    <Button
            android:text="send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/send"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sharetext"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.963"/>
    <Button
            android:text="Collaps_Toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/send"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.193"
    />

    <Button
            android:text="navi_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.178"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/button"
    />

    <Button
            android:text="Recycler-View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.178"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <Button
            android:text="Recycler-View With Database"
            android:layout_width="139dp"
            android:layout_height="wrap_content" android:id="@+id/button5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <Button
            android:text="DATABASE"
            android:layout_width="139dp"
            android:layout_height="wrap_content" android:id="@+id/button7"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.96"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button5"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Recycler-View-2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.183"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/bottomview"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="AlertDailogBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button6"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.96"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/bottomview"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintVertical_bias="0.0"/>
    <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:id="@+id/bottomview"
            app:itemBackground="@color/colorAccent1"
            app:itemIconTint="@drawable/nav_itemcolor"
            app:itemTextColor="@drawable/nav_itemcolor"
            app:menu="@menu/menu2"
            android:layout_height="wrap_content" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/button" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"
            tools:ignore="MissingConstraints" app:layout_constraintVertical_bias="1.0">
    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.DrawerLayout>